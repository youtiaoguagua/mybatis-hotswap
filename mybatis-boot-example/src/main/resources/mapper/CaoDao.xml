<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wang.boot.mybatisboot.dao.CaoDao">

    <resultMap type="com.wang.boot.mybatisboot.entity.Cao" id="CaoMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CaoMap">
        select
          id, name
        from cao
        where id = #{id}
    </select>

    <select id="queryLimit" resultMap="CaoMap">
        select
            id, name
        from cao limit 10
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from cao
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into cao(name)
        values (#{name})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into cao(name)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into cao(name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name})
        </foreach>
        on duplicate key update
        name = values(name)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update cao
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from cao where id = #{id}
    </delete>

</mapper>

